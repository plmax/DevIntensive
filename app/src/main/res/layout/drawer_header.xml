<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:paddingBottom="@dimen/spacing_small_8"
                android:paddingLeft="@dimen/spacing_small_16"
                android:paddingRight="@dimen/spacing_small_16"
                android:paddingTop="@dimen/spacing_medium_24"
                android:background="@drawable/header_bg">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/color_accent"
        android:layout_marginTop="@dimen/spacing_small_16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_large_56"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/drawer"
            android:text="@string/drawer_name_text"
            />

        <TextView
            android:id="@+id/user_email_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/drawer.email"
            android:text="@string/drawer_mail_text"/>

    </LinearLayout>

</RelativeLayout>