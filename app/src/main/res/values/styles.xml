<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>

    <style name="icon.left">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium_24</item>
        <item name="android:layout_marginLeft">@dimen/spacing_small_16</item>
    </style>

    <style name="icon.right">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
    </style>

    <style name="h_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:layout_marginLeft">@dimen/spacing_large_72</item>
        <item name="android:background">@color/grey_light</item>
    </style>

    <style name="v_line">
        <item name="android:layout_width">@dimen/line_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium_24</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medium_24</item>
    </style>

    <style name="font">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="font.header5">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>

    </style>

    <style name="font.header_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">top</item>
    </style>


</resources>
